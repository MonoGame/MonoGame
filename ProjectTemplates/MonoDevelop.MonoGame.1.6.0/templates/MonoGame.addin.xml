<Addin id          = "MonoGame"
       namespace   = "MonoDevelop"
       name        = "MonoGame Project Template"
       author      = "Dominique Louis"
       copyright   = "MPL"
       url         = "http://github.com/CartBlanche/MonoGame/"
       description = "Templates for creating games with MonoGame."
       category    = "Templates"
       version     = "1.0.0">
	
	<Runtime>
		<Import file = "MonoGameProject.xpt.xml"/>
        <Import file = "gameicon.png"/>
        <Import file = "Default.png"/>
    </Runtime>
	
	<Dependencies>
		<Addin id = "Ide" version="2.4"/>
		<Addin id = "CSharpBinding" version = "2.4" />
	</Dependencies>

	<Extension path = "/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id   = "MonoGameProject"
		                 file = "MonoGameProject.xpt.xml"/>
	</Extension>
	
	<Extension path = "/MonoDevelop/Ide/FileTemplates">
		<FileTemplate id = "MonoGameFile"
					  file = "MonoGameFile.xft.xml"/>
	</Extension>
</Addin>