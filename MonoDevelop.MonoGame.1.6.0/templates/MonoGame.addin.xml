<Addin id          = "MonoGame"
       namespace   = "MonoDevelop"
       name        = "MonoGame Project Template"
       author      = "JosÃ© Antonio Leal de Farias"
       copyright   = "LGPL 2.1"
       url         = "http://xnatouch.codeplex.com/"
       description = "Templates for creating games with MonoGame."
       category    = "Templates"
       version     = "1.0.0">
	
	<Runtime>
		<Import file = "MonoGameGameProject.xpt.xml"/>
        <Import file = "gameicon.png"/>
        <Import file = "Default.png"/>
    </Runtime>
	
	<Dependencies>
		<Addin id = "Ide" version="2.4"/>
		<Addin id = "CSharpBinding" version = "2.4" />
	</Dependencies>

	<Extension path = "/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id   = "MonoGameGameProject"
		                 file = "MonoGameGameProject.xpt.xml"/>
	</Extension>
	
	<Extension path = "/MonoDevelop/Ide/FileTemplates">
		<FileTemplate id = "MonoGameGameFile"
					  file = "MonoGameGameFile.xft.xml"/>
	</Extension>
</Addin>