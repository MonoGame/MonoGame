<Addin id          = "XnaTouch"
       namespace   = "MonoDevelop"
       name        = "XnaTouch Project Template"
       author      = "JosÃ© Antonio Leal de Farias"
       copyright   = "LGPL 2.1"
       url         = "http://xnatouch.codeplex.com/"
       description = "Templates for creating games with XnaTouch."
       category    = "Templates"
       version     = "1.0.0">
	
	<Runtime>
		<Import file = "XnaTouchGameProject.xpt.xml"/>
        <Import file = "gameicon.png"/>
        <Import file = "Default.png"/>
    </Runtime>
	
	<Dependencies>
		<Addin id = "Ide" version="2.4"/>
		<Addin id = "CSharpBinding" version = "2.4" />
	</Dependencies>

	<Extension path = "/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id   = "XnaTouchGameProject"
		                 file = "XnaTouchGameProject.xpt.xml"/>
	</Extension>
	
	<Extension path = "/MonoDevelop/Ide/FileTemplates">
		<FileTemplate id = "XnaTouchGameFile"
					  file = "XnaTouchGameFile.xft.xml"/>
	</Extension>
</Addin>