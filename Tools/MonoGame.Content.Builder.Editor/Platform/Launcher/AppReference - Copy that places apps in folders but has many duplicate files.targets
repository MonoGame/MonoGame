<Project>

  <!-- Copy all output files of ProjectReferences that have the 'AppReference' metadata.
       This ensures we copy
         1. The app's dlls and dependencies (that would normally be copied if 'ReferenceOutputAssembly' were true)
         2. The extra *.deps.json and *.runtimeconfig.json files that require a custom target to copy anyway.
            See https://github.com/dotnet/sdk/issues/1675#issuecomment-346135772 -->
  <Target Name="CopyAppReferences"
          BeforeTargets="GetCopyToOutputDirectoryItems"
          Outputs="%(ProjectReference.Identity)">

    <!-- Get the output folders of all AppReferences. -->
    <MSBuild Projects="%(ProjectReference.Identity)"
             Targets="GetTargetPath"
             Properties="Configuration=$(Configuration)"
             Condition="'%(ProjectReference.AppReference)' != ''">
      <Output TaskParameter="TargetOutputs"
              ItemName="TempTargetPath" />
    </MSBuild>
    <ItemGroup>
      <AppReference Include="%(ProjectReference.Identity)" Condition="'%(ProjectReference.AppReference)' != ''">
        <AppName>%(ProjectReference.FileName)</AppName>
        <TargetPath>@(TempTargetPath)</TargetPath>
        <TargetDirectory>$([System.IO.Path]::GetDirectoryName(%(AppReference.TargetPath)))</TargetDirectory>
      </AppReference>
    </ItemGroup>

    <Message Importance="high" Text="TEST_BATCH: %(AppReference.FileName)    %(AppReference.AppName)    %(AppReference.TargetDirectory)" />

    <!-- Include the entire output folder except for publish artifacts, pack artifacts, and dev configs. -->
    <ItemGroup>
      <AppReferenceContent Include="%(AppReference.TargetDirectory)\**\*"
                           Exclude="%(AppReference.TargetDirectory)\publish\**\*;
                                    %(AppReference.TargetDirectory)\*.nupkg;
                                    %(AppReference.TargetDirectory)\*.runtimeconfig.dev.json">
        <AppName>%(AppReference.AppName)</AppName>
      </AppReferenceContent>
    </ItemGroup>

    <Message Importance="high" Text="TEST_BATCH: %(AppReferenceContent.AppName)     %(AppReferenceContent.FullPath)" />
    
    <!-- Copy this content to the build output. -->
    <ItemGroup>
      <ContentWithTargetPath
        Include="%(AppReferenceContent.FullPath)"
        TargetPath="%(AppName)\%(RecursiveDir)%(Filename)%(Extension)"
        CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

  </Target>

</Project>
