    <Compile Include="..\..\MonoGame.Framework\Graphics\Vertices\VertexElementUsage.cs" />
    <Compile Include="..\..\MonoGame.Framework\MathHelper.cs" />
    <Compile Include="..\..\MonoGame.Framework\Matrix.cs" />
