  <ItemGroup>
    <Reference Include="..\..\ThirdParty\Dependencies\CppNet\CppNet.dll" />
  </ItemGroup>

  <Import Project="..\..\Switch\MonoGame.Effect.Compiler.targets" Condition="exists('..\..\Switch\MonoGame.Effect.Compiler.targets')" />
