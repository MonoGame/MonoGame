<?xml version="1.0" encoding="UTF-8" ?>
<Template>
	<TemplateConfiguration>
		<_Name>MonoGame Application (Shared Project) </_Name>
		<_Category>C#/MonoGame</_Category>
		<Icon>monogame-project</Icon>
		<LanguageName>C#</LanguageName>
		<_Description>Creates a MonoGame Application which uses a Shared Project to shared common code.</_Description>
	</TemplateConfiguration>
	
	<Actions>
		<Open filename = "Game1.cs"/>
	</Actions>
	
	<Combine name = "${ProjectName}" directory = ".">
		<Options>
			<StartupProject>${ProjectName}.Desktop</StartupProject>
		</Options>

		<Project name = "${ProjectName}" directory = "." type = "SharedAssetsProject">
			<Files>
				<File name="Game1.cs" src="Common/Game1.cs" />
			</Files>
		</Project>

		<Project name = "${ProjectName}.Desktop" directory = "." type="MonoGame">
			<Options />
			<References>
				<Reference type="Gac" refto="System" />
				<Reference type="Gac" refto="System.Xml" />
				<Reference type="Gac" refto="System.Core" />
				<Reference type="Project" refto="${ProjectName}"/>
			</References>
			<Packages>
				<Package id="MonoGame.Binaries" version="3.2.0" targetFramework="net40" />
			</Packages>
			<Files>
				<File name="Program.cs" src="Common/Program.cs" />
				<RawFile name="Icon.png" src="Common/Icon-md.png" />
				<Directory name="Properties">
					<File name="AssemblyInfo.cs" src="Common/AssemblyInfo.cs" />
				</Directory>
				<Directory name="Content">
				</Directory>
			</Files>
		</Project>

	</Combine>
</Template>