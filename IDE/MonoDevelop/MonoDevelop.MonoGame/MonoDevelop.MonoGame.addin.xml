      <ProjectTemplate id="MonoGameDXProject" file="templates/MonoGameWindowsProject.xpt.xml" />
      <!--- Linux Templates -->
      <ProjectTemplate id="MonoGameProject" file="templates/MonoGameProject.xpt.xml" />
    </Condition>
    <Condition id="IsLinux">
